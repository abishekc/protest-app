<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:onClick="switchToPin">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/pinLoc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="0dp"
            android:fontFamily="@font/poppins_bold"
            android:text="TextView"
            android:textColor="#aaa"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/pinDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_med"
            android:padding="0dp"
            android:text="TextView"
            android:textColor="#aaa"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/pinType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#F94F63"
            android:text="AnotherTextView"
            android:padding="0dp"
            android:fontFamily="@font/poppins_bold"
            android:textSize="12sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="12dp"
            android:background="#222"
            app:layout_constraintTop_toBottomOf="@id/add_new_update_button" />

        <TextView
            android:id="@+id/pinIndex"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:onClick="switchToPin"
            android:text="TextView"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
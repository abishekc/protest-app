<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#27252F"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="UPDATE DESCRIPTION"
            android:fontFamily="@font/circular_std_black"
            android:textColor="#fff"
            android:layout_marginLeft="2dp"
            android:textSize="15sp" />

        <ProgressBar
            android:paddingTop="3dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/progress_bar"
            style="?android:attr/progressBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminateTint="#50EFA3"
            android:visibility="invisible"/>
    </LinearLayout>

    <EditText
        android:id="@+id/update_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minLines="2"
        android:maxLines="10"
        android:textSize="14sp"
        android:layout_marginTop="10dp"
        android:hint="Keep it short and sweet. Click to type your update here."
        android:textColorHint="#aaa"
        android:fontFamily="@font/poppins_med"
        android:textColor="#aaa"
        android:padding="0dp"
        android:layout_marginLeft="2dp"
        android:background="#27252F"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_marginTop="5dp">

        <Button
            android:id="@+id/cancel_add_update"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:backgroundTint="#FA8B8B"
            android:fontFamily="@font/nevis_bold"
            android:text="@string/cancel" />

        <Button
            android:id="@+id/finish_button"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:backgroundTint="#50EFA3"
            android:fontFamily="@font/nevis_bold"
            android:text="@string/post" />

    </LinearLayout>



</LinearLayout>